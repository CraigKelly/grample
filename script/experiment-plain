#!/bin/bash

set -e

BURN_IN=2000
START_CHAINS=2
CONVERGE_WIN=2000
MAX_SECS=300

Y=$(tput setaf 3)
U=$(tput smul)
N=$(tput sgr0)

one() {
    trace_file="$1.PLAIN.trace"
    model_file="res/$1"

    echo -e "${Y}${U}${trace_file} <== ${model_file}${N}"

    ./grample --experiment --evidence --solution \
        --sampler simple \
        --burnin "${BURN_IN}" \
        --chains "${START_CHAINS}" \
        --cwin "${CONVERGE_WIN}" \
        --maxsecs "${MAX_SECS}" \
        --trace "${trace_file}" \
        --model "${model_file}"
}

make

# one deterministic.uai

# one Alchemy_11.uai
one CSP_11.uai
one CSP_12.uai
# one CSP_13.uai
# one dv-rel_1.uai
# one dv-rel_2.uai
# one dv-rel_3.uai
one Grids_11.uai
# one Grids_12.uai
one Grids_13.uai
# one Promedus_11.uai
# one Promedus_12.uai
# one Promedus_13.uai
one Segmentation_11.uai
